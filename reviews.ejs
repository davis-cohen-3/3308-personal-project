<%- include('../partials/header'); -%>
<%- include('../partials/menu'); -%> 

<div class="" style="background-color: #0f415c;">
    <div class="container-fluid" style="padding: 2%; ">
        <div class="text-center">
          <form class="" action="/filter" method="post">
            <div class="text-center">
                <input class="form-control" id="brewery_" type="text" name="brewerie" placeholder="Enter a brewery">
                <button class="btn btn-primary" type="submit" name="submitButton2" ><a href=""></a>Submit</button>
            </div>
          </form>
        </div>
    </div>
</div>
<div class="col-8">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <!-- -->
                    <th scope="col">Brewery</th>
                    <th scope="col">Review</th>
                    <th scope="col">Review Date</th>
                    
                </tr>
                <% if(brewery){
                    var table = ''
                    brewery.forEach(function(data){
                        table += '<tr><td>' + data.brewery_name + '</td><td>' + data.review + '</td><td>' + data.review_date +'</td></tr>';
                    })%>
                    <%-table%>
                <%}%>
            </thead>    
        </table>
    </div>
</div>